<UserControl x:Class="ExternalServicesViewExtension.ExternalServiceMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExternalServicesViewExtension"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.Resources>
            <local:OAuthServiceLoginStatusConverter x:Key="OAuthServiceLoginStatusConverter"/>
        </Grid.Resources>
        <MenuItem Click="MenuItem_OnClick">
            <MenuItem.Header>
                <MultiBinding Converter="{StaticResource OAuthServiceLoginStatusConverter}">
                    <Binding Path="Name"/>
                    <Binding Path="AuthenticationData"/>
                </MultiBinding>
            </MenuItem.Header>
        </MenuItem>
    </Grid>
</UserControl>
